                    <EditText
                        android:layout_weight="2"
                        android:id="@+id/edittext_regular_rig_drill_pipe_remain_length"
                        android:background="@drawable/cell_input"
                        android:textSize="@dimen/default_text_size"
                        android:layout_height="@dimen/default_table_height"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:nextFocusDown="@+id/edittext_regular_rig_rock_core_index"
                        android:inputType="numberDecimal" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text=""
                        android:textColor="@android:color/black"
                        android:layout_weight="2"
                        android:background="@drawable/cell_hint"
                        android:textSize="@dimen/default_text_size"
                        android:layout_height="@dimen/default_table_height"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <TextView
                        android:text="回次进尺(m)"
                        android:textColor="@android:color/black"
                        android:layout_weight="2"
                        android:background="@drawable/cell_hint"
                        android:textSize="@dimen/default_text_size"
                        android:layout_height="@dimen/default_table_height"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_weight="2"
                        android:id="@+id/textview_regular_rig_round_trip_meterage_length"
                        android:background="@drawable/cell_input"
                        android:textSize="@dimen/default_text_size"
                        android:layout_height="@dimen/default_table_height"
                        android:layout_width="0dp"
