                        android:id="@+id/spinner_regular_rig_rock_core_pipe_diameter"
                        android:background="@drawable/cell_input"
                        android:textSize="@dimen/default_text_size"
                        android:layout_height="@dimen/default_table_height"
                        android:layout_width="0dp"
