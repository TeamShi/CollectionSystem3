                        android:nextFocusDown="@+id/edittext_regular_rig_drill_bit_diameter"
                        android:inputType="numberDecimal" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="钻头组成"
                        android:textColor="@android:color/black"
                        android:layout_weight="2"
                        android:background="@drawable/cell_hint"
                        android:textSize="@dimen/default_text_size"
                        android:layout_height="@dimen/default_table_height"
                        android:layout_width="0dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="类型"
                        android:textColor="@android:color/black"
                        android:layout_weight="2"
                        android:background="@drawable/cell_hint"
                        android:textSize="@dimen/default_text_size"
                        android:layout_height="@dimen/default_table_height"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <Spinner
                        android:id="@+id/spinner_regular_rig_drill_bit_type"
                        android:layout_weight="2"
                        android:background="@drawable/cell_input"
                        android:layout_height="@dimen/default_table_height"
                        android:layout_width="0dp"
                        android:textSize="@dimen/default_text_size"
                        android:gravity="center"
                        android:layout_gravity="center" />
                    <TextView
                        android:text="直径(mm)"
                        android:textColor="@android:color/black"
                        android:layout_weight="2"
