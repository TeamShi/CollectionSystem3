<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamshi.collectionsystem3.HoleInfoActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:textSize="16dp"
                android:text="提交"
                android:id="@+id/button_confirm_add_hole"/>
            
            <Button
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:textSize="16dp"
                android:text="取消"
                android:id="@+id/button_cancel_add_hole"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="工程名称"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:background="@drawable/cell_hint"
                        android:textSize="16dp"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="project_name"
                        android:layout_weight="7"
                        android:textColor="@android:color/black"
                        android:id="@+id/textview_hole_info_project_name"
                        android:background="@drawable/cell_input"
                        android:textSize="16dp"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:text="钻探编号"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:background="@drawable/cell_hint"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:gravity="center"/>
                    <Spinner
                        android:id="@+id/spinner_hole_id_part1"
                        android:layout_weight="3"
                        android:background="@drawable/cell_input"
                        android:layout_gravity="center_vertical"
                        android:layout_height="64dp"
                        android:layout_width="0dp">
                    </Spinner>
                    <Spinner
                        android:id="@+id/spinner_hole_id_part2"
                        android:layout_weight="1"
                        android:background="@drawable/cell_input"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical">
                    </Spinner>
                    <EditText
                        android:id="@+id/edittext_hole_id_part3"
                        android:layout_weight="1"
                        android:background="@drawable/cell_input"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="16dp"
                        android:inputType="number"
                        android:nextFocusForward="@+id/edittext_hole_id_part5"/>
                    <Spinner
                        android:id="@+id/spinner_hole_id_part4"
                        android:layout_weight="1"
                        android:background="@drawable/cell_input"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical">
                    </Spinner>
                    <EditText
                        android:id="@+id/edittext_hole_id_part5"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:background="@drawable/cell_input"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:id="@+id/edittext_hole_special_id"
                        android:layout_weight="4"
                        android:background="@drawable/cell_input"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"/>

                </TableRow>

                <TableRow>
                    <TextView
                        android:text="开工日期"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:background="@drawable/cell_hint"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/textview_hole_start_date"
                        android:layout_weight="3"
                        android:background="@drawable/cell_input"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="完工日期"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:background="@drawable/cell_hint"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/textview_hole_end_date"
                        android:layout_weight="3"
                        android:padding="5dp"
                        android:background="@drawable/cell_input"
                        android:layout_height="64dp"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:gravity="center"/>
                </TableRow>



            </TableLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
