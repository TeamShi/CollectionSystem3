<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamshi.collectionsystem3.HoleIndexActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:id="@+id/button_add_hole"
                    android:text="添加新孔"
                    android:textSize="16dp"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:id="@+id/button_preview_project"
                    android:text="预览"
                    android:textSize="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:id="@+id/button_save_project"
                    android:layout_gravity="right"
                    android:text="保存"
                    android:textSize="16dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="勘探点基本信息表"
            android:textSize="32dp"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablelayout_holes">
                    <TableRow>
                        <TextView
                            android:text="勘探点名称"
                            android:textColor="@android:color/black"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="工程名称"
                            android:textColor="@android:color/black"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="阶段"
                            android:textColor="@android:color/black"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="冠词"
                            android:textColor="@android:color/black"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="里程"
                            android:textColor="@android:color/black"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="偏移量"
                            android:textColor="@android:color/black"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="高程"
                            android:textColor="@android:color/black"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="经距X"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="纬距Y"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="位置描述"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="记录者"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="记录日期"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="复核者"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="复核日期"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="附注"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                        <TextView
                            android:text="孔深"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:background="@drawable/cell_hint"
                            android:textSize="16dp"
                            android:layout_height="64dp"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"/>
                    </TableRow>
                </TableLayout>
            </ScrollView>

        </HorizontalScrollView>




    </LinearLayout>

</RelativeLayout>
